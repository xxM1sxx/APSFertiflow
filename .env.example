# MQTT Configuration
# Copy this file to .env and fill in your actual values

# MQTT Broker Configuration
MQTT_BROKER_HOST=e4c5b8e09c864d48877f4a9e21ce2369.s1.eu.hivemq.cloud
MQTT_BROKER_PORT=8884
MQTT_BROKER_PROTOCOL=wss
MQTT_USERNAME=Controller
MQTT_PASSWORD=Controller123!

# MQTT Topics Configuration
MQTT_TOPIC_PREFIX=silagung
MQTT_TOPIC_SENSOR=silagung/sensor
MQTT_TOPIC_CONTROL=silagung/control
MQTT_TOPIC_SYSTEM=silagung/system
MQTT_TOPIC_STATUS=silagung/status
